<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_payaddressFm_05"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="market.PayAddressFragment" >

    <Button
        android:id="@+id/bt_payaddressFm_05"
        android:layout_width="415sp"
        android:layout_height="wrap_content"
        android:text="@string/bottonConfirm"
        android:textSize="25sp"
        app:backgroundTint="@color/maincolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="確認" />

    <TextView
        android:id="@+id/tv_payaddressFm_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/textViewTransAddress"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="運送地址" />

    <ImageView
        android:id="@+id/iv_payaddressFm_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_magnify_05"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payaddressFm_05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_payaddressFm_05" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_payaddressFm_05"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_payaddressFm_05" />
</androidx.constraintlayout.widget.ConstraintLayout>